---
import Layout from '@/layouts/Layout.astro';
import { Site } from '@/lib/site';
---

<Layout title="Login">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-blue-500 to-purple-600">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
      <div class="flex justify-center mb-6">
        <img src={'/logo.svg'} alt={Site.name} class="h-12">
      </div>
      <h1 class="text-2xl font-bold text-center mb-6">Welcome back!</h1>
      <form>
        <div class="mb-4">
          <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
          <input type="email" id="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Email">
        </div>
        <div class="mb-6">
          <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
          <input type="password" id="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Password">
        </div>
        <div class="mb-6">
          <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">
            Login
          </button>
        </div>
      </form>
      <div class="text-center text-gray-600 mb-6">Or sign in with</div>
      <div class="grid grid-cols-3 gap-4">
        <button class="flex items-center justify-center border rounded-lg py-2 shadow hover:bg-gray-100">
          <img src="https://www.svgrepo.com/show/353616/google-icon.svg" alt="Google" class="h-6 w-6 mr-2">
          Google
        </button>
        <button class="flex items-center justify-center border rounded-lg py-2 shadow hover:bg-gray-100">
          <img src="https://www.svgrepo.com/show/353778/microsoft.svg" alt="Microsoft" class="h-6 w-6 mr-2">
          Microsoft
        </button>
        <button class="flex items-center justify-center border rounded-lg py-2 shadow hover:bg-gray-100">
          <img src="https://www.svgrepo.com/show/448220/apple-filled.svg" alt="Apple" class="h-6 w-6 mr-2">
          Apple
        </button>
      </div>
    </div>
  </div>
</Layout>
