---
import Social from "@/components/Social.astro";
import Layout from "@/layouts/Layout.astro";
import { Site } from "@/lib/site";
---

<Layout title="Login">
  <div class="bg-gradient-to-r from-blue-500 to-purple-600 screen-wrapper"
  style="background-size: cover;
    background-blend-mode: multiply;
    background-position: center center;
    background-image: url(https://res.cloudinary.com/ddkdvh5ps/image/upload/v1683398475/ezt-frontend-client-assets/bg-img-1_dzjvmu.png), url(https://res.cloudinary.com/ddkdvh5ps/image/upload/v1683398498/ezt-frontend-client-assets/bg-img-2_zbkxfr.png), url(https://res.cloudinary.com/ddkdvh5ps/image/upload/v1683398518/ezt-frontend-client-assets/bg-img-3_ayrlx8.png);">
    <div class="bg-white shadow-lg max-w-md w-full form-card-wrapper">
      <div class="flex justify-center mb-6">
        <img src={"/logo-black.svg"} alt={Site.name} class="h-12" />
      </div>
      <h1 class="text-2xl font-bold text-center mb-6">Welcome back!</h1>
      <form>
        <div class="mb-4">
          <label for="email" class="input--label">Email</label>
          <input
            type="email"
            id="email"
            class="input--field"
            placeholder="Email"
          />
        </div>
        <div class="mb-2">
          <label for="password" class="input--label">Password</label>
          <input
            type="password"
            id="password"
            class="input--field"
            placeholder="Password"
          />
        </div>
        <div class="mb-2 flex items-end justify-end">
          <a href="/forgot-password" class="text-sm text-left">
            Forgot Password?
          </a>
        </div>
        <div class="mb-4">
          <button
            type="submit"
            class="btn btn--primary btn--full mx-auto btn--large"
          >
            Login
          </button>
        </div>
        <div class="mb-2 flex items-center justify-center flex-wrap">
           <a href="/signup" class="text-sm text-left">
            Don't have an account? Sign up now
          </a>
        </div>
      </form>
      <div>
        <p class="text-center text-gray-500 mb-4 text-xs">
          By clicking Continue or the Apple, Google, or Facebook icons, you
          agree to EazyTicks's <a href="https://eazyticks.com/policies/terms-conditions" target="_blank" class="text-blue-700 font-semibold underline">Terms of Service</a> and <a href="https://eazyticks.com/policies/privacy-policy" target="_blank" class="text-blue-700 font-semibold underline">Privacy Policy</a>.
        </p>
      </div>
      <div class="text-center text-gray-600 mb-6 text-sm relative">
        <span class="bg-white z-1 relative px-3">Or sign in with</span>
        <hr class="border-gray-400 absolute w-full m-0 z-0" style="top:10px"/>
      </div>
      <Social />
    </div>
  </div>
</Layout>
